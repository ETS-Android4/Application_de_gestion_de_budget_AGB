<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherTransaction"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:layout_margin="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButtonO"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center_horizontal|center_vertical"
                app:srcCompat="@drawable/retour" />

            <TextView
                android:id="@+id/textViewCategorie"
                android:layout_width="379dp"
                android:layout_height="match_parent"
                android:background="#055d65"
                android:gravity="center|center_horizontal|center_vertical"
                android:shadowColor="#ffffff"
                android:text="Expense Category      "
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewO"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_others"/>

            <TextView
                android:id="@+id/CategorieDeLaTransaction"
                android:layout_width="161dp"
                android:layout_height="50dp"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Other Expenses"
                android:textColor="#000000"
                android:textSize="20dp" />


        </LinearLayout>
        <TextView
            android:id="@+id/textViewSomme"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#055d65"
            android:gravity="center|center_horizontal|center_vertical"
            android:shadowColor="#ffffff"
            android:text="Expense Value"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/SommeDeLaTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonAddO"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:shadowColor="#ffffff"
            android:shadowRadius="30"
            android:text="Add Transaction"
            android:textColor="#ffffff"
            app:backgroundTint="#055d65"
            app:iconTint="#ffffff" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:background="#055d65" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="595dp"
            android:divider="#508991"
            android:dividerHeight="8dp"
            android:gravity="center"
            android:headerDividersEnabled="true"
            tools:layout_editor_absoluteX="-8dp"
            tools:layout_editor_absoluteY="136dp" />


    </LinearLayout>



</LinearLayout>